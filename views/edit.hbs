<h1>Update Tasted Beers</h1>
<form action="/{{id}}?_method=PUT" method="post">
  <div class="form-group">
    <label for="beer-name">Update Beer Name</label>
    <input type="text" class="form-control" name="beer_name">
  </div>
  <div class="form-group">
    <label for="brewery-name">Update Brewery</label>
    <input type="text" class="form-control" name="brewery_name">
  </div>
  <div class="form-group">
    <label for="abv">Update ABV</label>
    <input type="number"  step="0.1" min="0" name="abv">
  </div>
  <button href="/{{id}}" type="submit" class="btn btn-default">Update</button>
</form>
