<h1>Newly Tasted Beers</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="beer-name">Beer Name</label>
    <input type="text" class="form-control" id="new-beer" name="beer_name">
  </div>
  <div class="form-group">
    <label for="brewery-name">Breweryy</label>
    <input type="text" class="form-control" id="brewery" name="brewery_name">
  </div>
  <div class="form-group">
    <label for="abv">ABV</label>
    <input type="number"  step="0.1" min="0" id="abv" name="abv">
  </div>
  <button type="submit" class="btn btn-default">Add Beer</button>
</form>
